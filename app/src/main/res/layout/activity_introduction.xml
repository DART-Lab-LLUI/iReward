<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.IntroductionActivity"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AIntroction_txtTitle"
        android:text="Welcome !"
        style="@style/TextViewTitleBlue"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AIntroction_txtexplain"
        android:text="You are about to start the path"
        android:layout_below="@id/AIntroction_txtTitle"
        style="@style/TextView"
        android:layout_marginTop="50dp"
        android:padding="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AIntroction_txtexplain2"
        android:text="Here are some explanations"
        android:layout_below="@id/AIntroction_txtexplain"
        style="@style/TextView"
        android:padding="10dp"/>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:id="@+id/AIntroduction_imExpli"
        android:src="@drawable/explipath"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"/>


    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:id="@+id/AIntroduction_btnStart"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Start the path"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/bg_button"/>


</RelativeLayout>